<div class="container">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>
        <legend class="text-center">Sign In</legend>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-5">
              <%= f.submit "Log in", class: "btn btn-sm btn-success col-xs-12" %>
            </div>
            <div class="col-xs-2 text-center">
              Or
            </div>
            <div class="col-xs-5">
              <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-sm btn-primary col-xs-12" %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>