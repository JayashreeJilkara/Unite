<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default login-panel">
      <div class="panel-body">
        <div class="row row-xs-flex-center" style="min-height: 310px">
          <div class="col-xs-6 text-center line" style="min-height: 290px; line-height: 140px">
            <img src="<%= image_url('logo.png') %>" width="160" height="90">
            <h4 class="site-name">Unite</h4>
            <h5 class="site-tag">A portal for students</h5>
          </div>
          <div class="col-xs-6">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <fieldset>
                  <legend>Sign In</legend>
                  <div class="form-group">
                    <%= f.email_field :email, class: 'form-control input-sm', placeholder: 'Email Address' %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-sm', placeholder: 'Password' %>
                  </div>
                  <div class="form-group">
                    <%= f.submit 'Log in', class: 'btn btn-sm btn-success col-xs-12' %>
                  </div>
                  <br>
                  <div class="form-group text-center" style="margin-top: 10px">
                    <%= link_to 'Sign up', new_registration_path(resource_name) %>
                  </div>
                </fieldset>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('.login-background').backstretch([
      "<%= image_url('background/1.jpeg') %>",
      "<%= image_url('background/2.jpeg') %>",
      "<%= image_url('background/3.jpeg') %>",
      "<%= image_url('background/4.jpeg') %>",
      "<%= image_url('background/5.jpeg') %>",
      "<%= image_url('background/6.jpeg') %>"
  ], {duration: 6000, fade: 1000})
</script>